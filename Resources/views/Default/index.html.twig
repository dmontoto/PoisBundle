{% extends 'GmapsBundle::layout.html.twig' %}

{% block title %}Symfony - Mapa{% endblock %}

{% block header %}
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="{{ asset('bundles/gmaps/js/data.json') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/gmaps/js/markerclusterer.js') }}"></script>
<script type="text/javascript">
{% if gmaps.hasMaps() %}
    {% for map in gmaps.getMaps() %}
        {% autoescape false %}
            {{ map.getJavascript }}
        {% endautoescape %}
    {% endfor %}
{% endif %}
</script>
{% endblock %}

{% block content %}
    <h1>Mapa!</h1>
    <div id="map" style="width:850px; height:300px"></div>
{% endblock %}