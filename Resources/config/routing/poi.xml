<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="poi" pattern="/">
        <default key="_controller">GmapsBundle:Poi:index</default>
    </route>

    <route id="poi_show" pattern="/{id}/show">
        <default key="_controller">GmapsBundle:Poi:show</default>
    </route>

    <route id="poi_new" pattern="/new">
        <default key="_controller">GmapsBundle:Poi:new</default>
    </route>

    <route id="poi_create" pattern="/create">
        <default key="_controller">GmapsBundle:Poi:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="poi_edit" pattern="/{id}/edit">
        <default key="_controller">GmapsBundle:Poi:edit</default>
    </route>

    <route id="poi_update" pattern="/{id}/update">
        <default key="_controller">GmapsBundle:Poi:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="poi_delete" pattern="/{id}/delete">
        <default key="_controller">GmapsBundle:Poi:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
