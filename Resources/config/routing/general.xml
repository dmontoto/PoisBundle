<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="GmapsBundle_homepage" pattern="/map">
        <default key="_controller">GmapsBundle:Default:index</default>
    </route>
    
    <route id="GmapsBundle_poiForm" pattern="/poiForm">
        <default key="_controller">GmapsBundle:Default:poiForm</default>
    </route>

    <route id="GmapsBundle_poiFormEdit" pattern="/poiFormEdit/{id}">
        <default key="_controller">GmapsBundle:Default:poiFormEdit</default>
        <default key="id"></default>
    </route>

    <route id="GmapsBundle_grid" pattern="/grid">
        <default key="_controller">GmapsBundle:Default:grid</default>
    </route>    
    
    <route id="GmapsBundle_filter" pattern="/filter">
        <default key="_controller">GmapsBundle:Default:grid</default>
    </route>

</routes>
